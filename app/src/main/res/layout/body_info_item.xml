<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_weight="1">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="개월수"
            android:id="@+id/imonth"
            android:textSize="11dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="등록일"
            android:id="@+id/insertDate"
            android:textSize="11dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_weight="1">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:text="신장"
            android:id="@+id/height"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:text="체중"
            android:id="@+id/weight"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_weight="1">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="50dp"
            android:text="신장증감"
            android:id="@+id/hincre"
            android:textSize="12dp"/>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="50dp"
            android:text="체중증감"
            android:id="@+id/wincre"
            android:textSize="12dp"/>

    </LinearLayout>

    <TextView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="111"
    android:id="@+id/nid"
    android:visibility="invisible"/>
    <TextView
        android:id="@+id/deleteIcon"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:drawableStart="@drawable/ic_delete_forever_black_24dp"
        android:drawableLeft="@drawable/ic_delete_forever_black_24dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text=""/>
</LinearLayout>