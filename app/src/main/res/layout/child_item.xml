<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:layout_margin="5dp"
    android:descendantFocusability="blocksDescendants"
    android:layout_gravity="center"
    android:gravity="center">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="70dp"
        android:text="이름"
        android:id="@+id/name"
        android:textSize="13dp"
        android:drawableStart="@drawable/ic_face_black_24dp"
        android:drawableLeft="@drawable/ic_face_black_24dp"
        android:textColor="@drawable/list_color"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="70dp"
        android:text="생년월일"
        android:id="@+id/birth"
        android:textSize="12dp"
        android:layout_weight="1"
        android:textColor="@drawable/list_color"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="30dp"
        android:text="성별"
        android:id="@+id/sex"
        android:textSize="12dp"
        android:textColor="@drawable/list_color"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text=""
        android:id="@+id/nid"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/deleteIcon"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:drawableStart="@drawable/ic_delete_forever_black_24dp"
        android:drawableLeft="@drawable/ic_delete_forever_black_24dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text=""
        android:layout_weight="1"/>
</LinearLayout>